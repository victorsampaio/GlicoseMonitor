<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vs.com.br.glicosemonitor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MenuRegisterActivity"
            android:label="@string/title_activity_menu_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.RegisterUserInformationsActivity"></activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="a03b983885f89ffea3e245d568bcb34bb1d3c26c" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>